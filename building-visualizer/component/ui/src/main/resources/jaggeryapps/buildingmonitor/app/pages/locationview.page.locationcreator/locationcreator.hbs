{{unit "cdmf.unit.ui.title" pageTitle="Home"}}
{{unit "uuf.unit.lib.form-validation"}}
{{#zone "topCss"}}
    {{css "css/image-mapper.css"}}
{{/zone}}
{{#zone "breadcrumbs"}}
    <li>
        <a href="{{@app.context}}/">
            <i class="icon fw fw-home"></i>
        </a>
    </li>
{{/zone}}

{{#zone "navbarActions"}}
    <li>
        <!--suppress HtmlUnknownTarget -->
        <a href="/buildingmonitor" class="cu-btn">
        <span class="icon fw-stack">
            <i class="fw fw-back fw-stack-1x"></i>
            <i class="fw fw-circle-outline fw-stack-2x"></i>
        </span>
            Goto Map View
        </a>
    </li>
{{/zone}}

{{#zone "content"}}
    <!--</header>-->
    <div class="row sides-wild">
        <div class="col-md-2 col-sm-12 col-xs-12">

        </div>
        <div class="col-md-8 col-sm-12 col-xs-12">
            <div id="image_wrapper">
                <!-- Get image form -->
                <div id="get_image_wrapper" class="">
                    <div id="get_image">


                        <span title="close" class="close_button hidden"></span>

                        <div id="loading">Loading</div>
                        <div id="file_reader_support">
                            <h3>Please upload a Floor Plan to the floor</h3>
                            <label>Drag and drop image</label>
                            <div id="dropzone">
                                <span class="clear_button" title="clear">x</span>
                                <img src="" alt="preview" id="sm_img"/>
                            </div>
                            <b>or</b>
                        </div>
                        <button id="button" class="btn btn-primary" title="Use floorplan">Proceed</button>

                    </div>
                </div>
                <!--end of image drag drop-->
                <div id="image">
                    <img src="" alt="#" id="img"/>
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.2" baseProfile="tiny" id="svg"></svg>
                    <!--<canvas id="heatmap"> </canvas>-->
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-12 col-xs-12">

        </div>
    </div>
{{/zone}}

{{#zone "bottomJs"}}
    {{js "js/imageUploader.js"}}
{{/zone}}
