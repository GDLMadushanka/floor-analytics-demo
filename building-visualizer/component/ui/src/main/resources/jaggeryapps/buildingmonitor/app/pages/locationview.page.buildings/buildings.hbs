{{unit "cdmf.unit.ui.title" pageTitle="Home"}}
{{#zone "breadcrumbs"}}
    <li>
        <a href="{{@app.context}}/">
            <i class="icon fw fw-home"></i>
        </a>
    </li>
{{/zone}}

{{#zone "navbarActions"}}
    <li>
        <!--suppress HtmlUnknownTarget -->
        <a href="/buildingmonitor" class="cu-btn">
        <span class="icon fw-stack">
            <i class="fw fw-back fw-stack-1x"></i>
            <i class="fw fw-circle-outline fw-stack-2x"></i>
        </span>
            Goto Map View
        </a>
    </li>
{{/zone}}

{{#zone "content"}}
    <!--</header>-->
    <div class="row" data-num_of_floors="{{floorCount}}" id="buildingView">
        {{#each floors}}
        <div class="col-lg-5 col-md-6 col-centered message message-success" id = "div_{{this.num}}">
            Floor - {{this.num}}
            {{#if this.image}}

                    <a href="/buildingmonitor/floor?buildingId={{../../buildingId}}&floorId={{../this.num}}">
                        <!--<canvas id="{{num}}" width="300%" height="100" style="border:1px solid #000000;"/>-->
                        <div id="{{num}}">
                            <span id="temperature">Temperature: No Value</span><br>
                            <span id="humidity">Humidity: No Value</span><br>
                            <span id="light">Light: No Value</span><br>
                            <span id="motion">Motion: No Value</span><br>
                            <span id="airquality">Air Quality: No Value</span>
                        </div>
                    </a>
                    <p id = "alerts_{{../this.num}}">alerts : 0</p>
                    <p id = "active_{{../this.num}}">active : {{../this.active}}</p>
                    <p id = "inactive_{{../this.num}}">inactive : {{../this.inactive}}</p>
                    <p id = "fault_{{../this.num}}">fault : {{../this.fault}}</p>


            {{else}}
                <div id="upload-view">
                    {{unit "locationview.unit.floorcreate" buildingId=../../buildingId floorId=../this.num}}
                </div>
            {{/if}}
        </div>
            <br>
        {{/each}}



    </div>


    {{unit "locationview.unit.ui.analytics.rangeSelector"}}
{{/zone}}

{{#zone "bottomJs"}}
    {{js "js/buildings.js"}}
{{/zone}}